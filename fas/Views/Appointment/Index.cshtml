@model IEnumerable<FacultyAppointmentSystem.Models.Appointment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Appointments</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Make a new appointment</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Orari)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pershkrimi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dega)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lendet)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Orari)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pershkrimi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dega)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lendet)
            </td>
            <td>
                <button class="btn btn-info"> @Html.ActionLink("Edit", "Edit", new { id = item.Id })</button> |
                <button class="btn btn-default">@Html.ActionLink("Details", "Details", new { id = item.Id })</button> |
                <button class="btn btn-warning">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</button>
            </td>
        </tr>
}
    </tbody>
</table>
