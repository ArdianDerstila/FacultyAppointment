@model IEnumerable<FacultyAppointmentSystem.Models.Deget>

@{ ViewData["Title"] = "Index";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>Deget</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Shto Degen</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Id)
    </td>
    <td>
        <button class="btn btn-info"> @Html.ActionLink("Edit", "Edit", new { id = item.Id })</button> |
        <button class="btn btn-default">@Html.ActionLink("Details", "Details", new { id = item.Id })</button> |
        <button class="btn btn-warning">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</button>
    </td>
</tr>}
    </tbody>
</table>
